
<div class="ui centered grid">
  <div class="row">
    <div class="four wide column">
      <h2> Add Students</h2>
      <%= form_tag("/students/create", method:"post", :class => "ui form") do %>
      <div class="field">
        <%= text_field(:student, :first_name, placeholder: "First Name") %>
      </div>
      <div class="field">
        <%= text_field(:student, :last_name, placeholder: "Last Name") %>
      </div>
      <div class="field">
        <%= email_field(:student, :email, placeholder: "Email") %>
      </div>
      <div class="field">
        <%= date_field(:student, :birthday, min: "1869-01-01") %>
      </div>
      <div class="field">
        <label>Highest level of education completed:</label>
        <%= select_tag(:education,  options_for_select([['High School Diploma', 'High School Diploma'], ["Some College", 'Some College'], ['Masters Degree', 'Masters Degree'], ['PhD, Doctorate', 'PhD, Doctorate']])) %>
      </div>
      <%= submit_tag('Add Student', :class => "ui button") %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="eight wide column">
      <table class="ui striped table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Email</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <!-- LOOP THROUGH STUDENTS -->
            <% @all_students.each do |students| %>
              <tr>
                <td><a href=""><%= students.first_name + " " + students.last_name %></a></td>
                <td><%= students.birthday %></td>
                <td><%= students.email %></td>
                <td>
                  <%= link_to 'Edit Student', edit_student_path(students), :class => "ui blue button" %>
                  <%= link_to 'Remove Student', student_path(students), method: :delete, :class => "ui red button" %>
                </td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
